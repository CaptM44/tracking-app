{
	"manifest_version": 2,
	"name": "Tracker App",
	"version": "1.0.0",
	"browser_action": {
		"default_icon": "img.png",
		"default_popup": "popup.html",
		"default_title": "Tracker App"
	},
	"background": {
		"scripts": ["utils.js", "background.js"],
		"persistent": false
	},
	"permissions": [
		"storage",
		"contextMenus",
		"alarms",
		"notifications"
	],
	"options_page": "options.html",
	"icons": {
		"16": "img.png",
		"48": "img.png",
		"128": "img.png"
	},
	"content_scripts": [{
		"matches": ["<all_urls>"],
		"js": ["content.js"],
		"run_at": "document_end"
	}]
}