{
	"manifest_version": 2,
	"name": "Tracker App",
	"version": "1.0.0",
	"browser_action": {
		"default_icon": "images/icon.png",
		"default_popup": "popup.html",
		"default_title": "Tracker App"
	},
	"background": {
		"scripts": ["utils.js", "background.js"],
		"persistent": false
	},
	"permissions": [
		"storage",
		"contextMenus",
		"alarms",
		"notifications"
	],
	"options_page": "popup.html",
	"icons": {
		"16": "images/icon.png",
		"48": "images/icon.png",
		"128": "images/icon.png"
	}
}